{
  "openapi": "3.0.0",
  "info": {
    "title": "Répertoire des Patronymes API",
    "description": "API complète pour explorer et gérer les patronymes du Burkina Faso",
    "version": "1.0.0",
    "contact": {
      "name": "Support API",
      "email": "support@patronymes-bf.bf"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Serveur de développement"
    },
    {
      "url": "https://api.patronymes-bf.bf/v1",
      "description": "Serveur de production"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/patronymes": {
      "get": {
        "summary": "Liste des patronymes",
        "description": "Récupère une liste paginée des patronymes avec filtres",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Terme de recherche",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "region_id",
            "in": "query",
            "description": "ID de la région",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Nombre d'éléments par page (max 100)",
            "schema": {
              "type": "integer",
              "default": 15,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des patronymes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatronymeCollection"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer un patronyme",
        "description": "Crée un nouveau patronyme (authentification requise)",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatronymeInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Patronyme créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatronymeResponse"
                }
              }
            }
          },
          "422": {
            "description": "Erreur de validation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/patronymes/{id}": {
      "get": {
        "summary": "Détails d'un patronyme",
        "description": "Récupère les détails complets d'un patronyme",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID du patronyme",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Détails du patronyme",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatronymeResponse"
                }
              }
            }
          },
          "404": {
            "description": "Patronyme non trouvé"
          }
        }
      },
      "put": {
        "summary": "Mettre à jour un patronyme",
        "description": "Met à jour un patronyme existant (authentification requise)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID du patronyme",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatronymeInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patronyme mis à jour avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatronymeResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Supprimer un patronyme",
        "description": "Supprime un patronyme (authentification requise)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID du patronyme",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Patronyme supprimé avec succès"
          }
        }
      }
    },
    "/patronymes/popular": {
      "get": {
        "summary": "Patronymes populaires",
        "description": "Récupère les patronymes les plus consultés",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Nombre de résultats (max 50)",
            "schema": {
              "type": "integer",
              "default": 10,
              "maximum": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des patronymes populaires",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatronymeCollection"
                }
              }
            }
          }
        }
      }
    },
    "/patronymes/suggestions": {
      "get": {
        "summary": "Suggestions de recherche",
        "description": "Récupère des suggestions de recherche en temps réel",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Terme de recherche (minimum 2 caractères)",
            "schema": {
              "type": "string",
              "minLength": 2
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des suggestions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Suggestion"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/statistics/overview": {
      "get": {
        "summary": "Statistiques générales",
        "description": "Récupère les statistiques générales de l'application",
        "responses": {
          "200": {
            "description": "Statistiques générales",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatisticsOverview"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Connexion",
        "description": "Authentifie un utilisateur et retourne un token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "401": {
            "description": "Identifiants invalides"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Patronyme": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          },
          "origine": {
            "type": "string"
          },
          "signification": {
            "type": "string"
          },
          "histoire": {
            "type": "string"
          },
          "transmission": {
            "type": "string",
            "enum": ["pere", "mere", "autre"]
          },
          "patronyme_sexe": {
            "type": "string",
            "enum": ["M", "F", "mixte"]
          },
          "totem": {
            "type": "string"
          },
          "justification_totem": {
            "type": "string"
          },
          "parents_plaisanterie": {
            "type": "string"
          },
          "frequence": {
            "type": "integer"
          },
          "views_count": {
            "type": "integer"
          },
          "is_featured": {
            "type": "boolean"
          },
          "is_popular": {
            "type": "boolean"
          },
          "search_score": {
            "type": "number"
          },
          "full_location": {
            "type": "string"
          },
          "region": {
            "$ref": "#/components/schemas/Region"
          },
          "province": {
            "$ref": "#/components/schemas/Province"
          },
          "commune": {
            "$ref": "#/components/schemas/Commune"
          },
          "groupe_ethnique": {
            "$ref": "#/components/schemas/GroupeEthnique"
          },
          "ethnie": {
            "$ref": "#/components/schemas/Ethnie"
          },
          "langue": {
            "$ref": "#/components/schemas/Langue"
          },
          "mode_transmission": {
            "$ref": "#/components/schemas/ModeTransmission"
          },
          "favorites_count": {
            "type": "integer"
          },
          "comments_count": {
            "type": "integer"
          },
          "enquete": {
            "$ref": "#/components/schemas/Enquete"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "urls": {
            "type": "object",
            "properties": {
              "show": {
                "type": "string"
              },
              "api_show": {
                "type": "string"
              }
            }
          }
        }
      },
      "PatronymeInput": {
        "type": "object",
        "properties": {
          "nom": {
            "type": "string",
            "minLength": 2,
            "maxLength": 255
          },
          "origine": {
            "type": "string",
            "maxLength": 1000
          },
          "signification": {
            "type": "string",
            "maxLength": 2000
          },
          "histoire": {
            "type": "string",
            "maxLength": 5000
          },
          "transmission": {
            "type": "string",
            "enum": ["pere", "mere", "autre"]
          },
          "patronyme_sexe": {
            "type": "string",
            "enum": ["M", "F", "mixte"]
          },
          "totem": {
            "type": "string",
            "maxLength": 255
          },
          "justification_totem": {
            "type": "string",
            "maxLength": 1000
          },
          "parents_plaisanterie": {
            "type": "string",
            "maxLength": 1000
          },
          "region_id": {
            "type": "integer"
          },
          "province_id": {
            "type": "integer"
          },
          "commune_id": {
            "type": "integer"
          },
          "groupe_ethnique_id": {
            "type": "integer"
          },
          "ethnie_id": {
            "type": "integer"
          },
          "langue_id": {
            "type": "integer"
          },
          "mode_transmission_id": {
            "type": "integer"
          },
          "frequence": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100000
          },
          "enquete_nom": {
            "type": "string",
            "minLength": 2,
            "maxLength": 255
          },
          "enquete_age": {
            "type": "integer",
            "minimum": 1,
            "maximum": 120
          },
          "enquete_sexe": {
            "type": "string",
            "enum": ["M", "F"]
          },
          "enquete_fonction": {
            "type": "string",
            "maxLength": 255
          },
          "enquete_contact": {
            "type": "string",
            "maxLength": 255
          }
        },
        "required": ["nom", "enquete_nom"]
      },
      "PatronymeResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/Patronyme"
          }
        }
      },
      "PatronymeCollection": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Patronyme"
            }
          },
          "meta": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer"
              },
              "per_page": {
                "type": "integer"
              },
              "current_page": {
                "type": "integer"
              },
              "last_page": {
                "type": "integer"
              },
              "from": {
                "type": "integer"
              },
              "to": {
                "type": "integer"
              }
            }
          },
          "links": {
            "type": "object",
            "properties": {
              "first": {
                "type": "string"
              },
              "last": {
                "type": "string"
              },
              "prev": {
                "type": "string"
              },
              "next": {
                "type": "string"
              }
            }
          }
        }
      },
      "Region": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "Province": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "Commune": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "GroupeEthnique": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "Ethnie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "Langue": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "ModeTransmission": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nom": {
            "type": "string"
          }
        }
      },
      "Enquete": {
        "type": "object",
        "properties": {
          "nom": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "sexe": {
            "type": "string",
            "enum": ["M", "F"]
          },
          "fonction": {
            "type": "string"
          },
          "contact": {
            "type": "string"
          }
        }
      },
      "Suggestion": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["patronyme", "region", "groupe", "similar"]
          },
          "value": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "StatisticsOverview": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "properties": {
              "total_patronymes": {
                "type": "integer"
              },
              "total_users": {
                "type": "integer"
              },
              "total_regions": {
                "type": "integer"
              },
              "total_groupes": {
                "type": "integer"
              },
              "total_views": {
                "type": "integer"
              },
              "total_favorites": {
                "type": "integer"
              },
              "contributions_today": {
                "type": "integer"
              },
              "contributions_this_week": {
                "type": "integer"
              },
              "active_users_today": {
                "type": "integer"
              },
              "search_count_today": {
                "type": "integer"
              }
            }
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string"
                  }
                }
              },
              "token": {
                "type": "string"
              }
            }
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
